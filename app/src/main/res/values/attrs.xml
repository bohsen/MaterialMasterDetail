<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BoundedView">
        <attr name="bounded_width" format="dimension" />
        <attr name="bounded_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="android:text" format="string" />
        <attr name="android:hint" format="string"/>
        <attr name="android:src" format="reference"/>
        <attr name="android:tint" format="color"/>
        <attr name="android:textSize" format="dimension"/>
        <attr name="android:textColor" format="color"/>
        <attr name="android:maxLines" format="integer"/>
        <attr name="android:minLines" format="integer"/>
        <attr name="android:lines" format="integer"/>
        <attr name="android:inputType" format="integer"/>
        <attr name="android:drawableEnd" format="reference"/>
        <attr name="android:drawableStart" format="reference"/>
        <attr name="android:drawableTop" format="reference"/>
        <attr name="android:drawableBottom" format="reference"/>
    </declare-styleable>
</resources>