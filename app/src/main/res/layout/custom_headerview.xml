<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vUserProfileRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:paddingBottom="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="64dp"
    app:layout_collapseMode="parallax"
    tools:parentTag="com.lucasurbas.masterdetail.ui.widget.HeaderView">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <TextView
        android:id="@+id/custom_headerview_accnr_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="MI.NJA.0L123456"
        android:textSize="16sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:text="MI.NJA.0H1234567" />

    <TextView
        android:id="@+id/custom_headerview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010101-0TT1"
        android:textSize="24sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/custom_headerview_accnr_user"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="232dp"
        tools:text="010101-0TT1"/>

    <TextView
        android:id="@+id/custom_headerview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Smith"
        android:textSize="36sp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/custom_headerview_id"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="232dp"
        tools:text="John Smith" />

    <TextView
        android:id="@+id/custom_headerview_posts_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="70"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/custom_headerview_followers_count"
        app:layout_constraintEnd_toStartOf="@+id/custom_headerview_followers_count"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="27dp"
        tools:layout_conversion_absoluteWidth="44dp"
        tools:text="70"/>

    <TextView
        android:id="@+id/custom_headerview_posts_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="kg"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/custom_headerview_posts_count"
        app:layout_constraintStart_toStartOf="@+id/custom_headerview_posts_count"
        app:layout_constraintTop_toBottomOf="@+id/custom_headerview_posts_count"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="30dp" />


    <TextView
        android:id="@+id/custom_headerview_followers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="170"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_headerview_name"
        tools:text="170" />

    <TextView
        android:id="@+id/custom_headerview_followers_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/custom_headerview_followers_count"
        app:layout_constraintStart_toStartOf="@+id/custom_headerview_followers_count"
        app:layout_constraintTop_toBottomOf="@+id/custom_headerview_followers_count" />

    <TextView
        android:id="@+id/custom_headerview_following_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Onkologisk"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/custom_headerview_followers_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/custom_headerview_followers_count"
        tools:text="Onkologisk"/>

    <TextView
        android:id="@+id/custom_headerview_following_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afdeling"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/custom_headerview_following_count"
        app:layout_constraintStart_toStartOf="@+id/custom_headerview_following_count"
        app:layout_constraintTop_toBottomOf="@+id/custom_headerview_following_count" />

    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Onkologisk Afdeling"
        app:chipIcon="@drawable/ic_vd_hospital_24dp"
        android:checkable="false"
        android:clickable="false"
        app:checkedIconEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/custom_headerview_name"
        app:layout_constraintStart_toStartOf="@+id/custom_headerview_name"
        app:layout_constraintTop_toBottomOf="@+id/custom_headerview_followers_text" />
</merge>